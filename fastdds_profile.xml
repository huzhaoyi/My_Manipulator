<?xml version="1.0" encoding="UTF-8" ?>
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <!-- 
        FastDDS 配置文件：限制只使用 ens33 网卡 (192.168.32.135)
        解决多网卡环境下 action 回包丢失问题
        
        使用方法：
        export FASTRTPS_DEFAULT_PROFILES_FILE=/path/to/fastdds_profile.xml
    -->
    
    <!-- 定义 UDP 传输描述符，限制只使用指定网卡 -->
    <!-- 注意：可以同时使用 IP 地址和接口名称 -->
    <!-- 同时允许 ens33（机械臂通信）和 lo（本地通信） -->
    <transport_descriptors>
        <transport_descriptor>
            <transport_id>udp_transport</transport_id>
            <type>UDPv4</type>
            <interfaceWhiteList>
                <!-- 使用接口名称（推荐，更可靠） -->
                <address>ens33</address>
                <!-- 本地回环接口，用于本地通信 -->
                <address>lo</address>
                <!-- 或者使用 IP 地址 -->
                <address>192.168.32.135</address>
                <address>127.0.0.1</address>
            </interfaceWhiteList>
        </transport_descriptor>
    </transport_descriptors>
    
    <!-- 默认参与者配置，使用自定义传输 -->
    <participant profile_name="default" is_default_profile="true">
        <rtps>
            <userTransports>
                <transport_id>udp_transport</transport_id>
            </userTransports>
            <useBuiltinTransports>false</useBuiltinTransports>
            <!-- 设置默认接口为 ens33（机械臂通信网卡） -->
            <defaultUnicastLocatorList>
                <locator>
                    <udpv4>
                        <address>192.168.32.135</address>
                    </udpv4>
                </locator>
            </defaultUnicastLocatorList>
        </rtps>
    </participant>
</profiles>
