<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- name: ros2_control 硬件名，日志中 "Loading hardware 'xxx'" 即此名；传 m5_robot 表示 M5 实机 UDP 接口 -->
    <xacro:macro name="m5_ros2_control" params="name initial_positions_file">
        <xacro:property name="initial_positions" value="${xacro.load_yaml(initial_positions_file)['initial_positions']}"/>

        <ros2_control name="${name}" type="system">
            <hardware>
                <!-- 使用真实硬件接口连接到S3机械臂，通过UDP协议通信 -->
                <!-- 发送角度（度），接收角度（度）并转换为弧度 -->
                <plugin>m5_hardware/M5HardwareInterface</plugin>
                <!-- 机械臂目标IP和端口（接收方） -->
                <param name="robot_ip">192.168.32.150</param>
                <param name="robot_port">7003</param>
                <!-- 本地绑定IP和端口（发送方：电脑） -->
                <param name="local_ip">192.168.32.135</param>
                <param name="local_port">7001</param>
                <param name="max_velocity">2.0</param>
                <param name="position_tolerance">0.01</param>
            </hardware>
            <joint name="Joint1">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Joint1']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="Joint2">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Joint2']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="Joint3">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Joint3']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="Joint4">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Joint4']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="JointGL">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['JointGL']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="JointGR">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['JointGR']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>

        </ros2_control>
    </xacro:macro>
</robot>
